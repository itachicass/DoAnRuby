<ul class="thumbnails listing-products" id=" productspace">

            <%if @saches.nil? || @saches.empty?%>
             <p> Không có sản phẩm phù hợp</p>
            <%else%>
            <% @saches.each do |sach| %>
                <li class="span8">
                     <div class="thumbnail" data-fancybox-group="group1">
                        <span class="sale_tag"></span>
                        <div class="span4">
                        <%= link_to chitiet_path(id:sach.id) do %>
                        <%= image_tag(sach.hinhanh, height: '200', width: '100') %>
                        <% end%>
                        </div>
   
                        <br />
                       <address>
                        <strong>Tên sách:</strong> <%= sach.tensach%><br>
                        <strong>Tên tác giả:</strong> <span><%=sach.tacgia%></span><br>
                        <strong>Nhà xuất bản:</strong> <span><%=sach.nxb%></span><br>
                        <strong>Thể loại:</strong> <span><%=sach.theloai%></span><br>
                        <strong>Số lượng còn: </strong> <span><%=sach.soluong%></span>
                    </address>
                    <h4><strong>Giá: </strong><%=sach.dongia%></h4>

                </li>
                <br>
                
            <% end %> 
            <br> 
            <%= pagy_bootstrap_nav(@pagy).html_safe %>
            <% end%>        
            </ul>
            <hr>          
        </div>