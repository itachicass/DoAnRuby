<h3>Thông tin nhận hàng</h3>
<%= form_with url: order_path do |f| %>

<div class="field">
    <label for="name">Họ và tên</label>
    <%= f.text_field :name, autofocus: true, value: current_user.name %>
  </div>

<div class="field">
    <label for="gender">Giới tính</label> 
   <%= f.text_field :gender, autofocus: true, value: current_user.gender %>
  </div>

<div class="field">
<label for="address">Địa chỉ</label> 
    <%= f.text_field :address, autofocus: true, value: current_user.address %>
  </div>

  <div class="field">
<label for="phone_number">Số điện thoại</label>
    <%= f.text_field :phone_number, autofocus: true, value: current_user.phone_number %>
  </div>

<div class="field">
<label for="note">Ghi chú</label>
    <%= f.text_field :note, autofocus: true %>
  </div>


  <div class="actions">
    <%= f.submit "Đặt hàng" %>
  </div>
<% end %>